<%- include('header') %>
    <!-- HEADER DESKTOP-->

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="mt-5 col-sm-12 col-xl-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Update data</h6>
                            <% var name = adata.name.split(" ") %>
                            <form method="post" action="/admin/edit/<%= adata.id %>" enctype="multipart/form-data">
                                <div class="row mb-3">
                                    <label for="fname" class="col-sm-2 col-form-label">First name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="fname" name="fname" value="<%= name[0] %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="lname" class="col-sm-2 col-form-label">Last name</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="lname" name="lname" value="<%= name[1] %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" id="email" name="email" value="<%= adata.email %>">
                                    </div>
                                </div>
                                <div>
                                    <label for="pass" class="col-sm-2 col-form-label">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" id="male" <% if(adata.gender == "Male") { %> <%= 'checked' %> <% } %> value="Male" name="gender">
                                        <label class="form-check-label" for="male">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" id="female" <% if(adata.gender == "Female") { %> <%= 'checked' %> <% } %>
                                            value="Female" name="gender">
                                        <label class="form-check-label" for="female">Feale</label>
                                    </div>
                                </div>
                                <div>
                                    <label for="pass" class="col-sm-2 col-form-label">Hobby</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="sports" <% if(adata.hobby.includes('Sports')) { %> <%= 'checked' %> <% } %> value="Sports"
                                            name="hobby">
                                        <label class="form-check-label" for="sports">Sports</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="adventure" <% if(adata.hobby.includes('Adventure')) { %> <%= 'checked' %> <% } %> value="Adventure" name="hobby">
                                        <label class="form-check-label" for="adventure">Adventure</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="music" <% if(adata.hobby.includes('Music')) { %> <%= 'checked' %> <% } %> value="Music"
                                            name="hobby">
                                        <label class="form-check-label" for="music">Music</label>
                                    </div>
                                </div>
                                <% var city=["Surat","Bhavnagar","Rajkot","Vadodara"] %>
                                    <div>
                                        <div class="form-floating mb-3">
                                            <select class="form-select" name="city">
                                                <option selected>-- select city --</option>
                                                <% city.map((v,i)=> { %>
                                                    <option <% if(adata.city == v) { %> <%= 'selected' %> <% } %> value="<%= v %>">
                                                        <%= v %>
                                                    </option>
                                                    <% } ) %>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-floating">
                                        <textarea class="form-control" placeholder="Enter your address" id="address"
                                            style="height: 150px;" name="address"><%= adata.address %></textarea>
                                        <label for="pass" class="col-sm-2 col-form-label">Address</label>
                                    </div>
                                    <div class="mt-3 mb-3">
                                        <label for="formFile" class="form-label">Select image</label>
                                        <input class="form-control bg-dark" type="file" id="formFile" name="image">
                                    </div>
                                    <img src="<%= adata.image %>" alt="image" title="image" height="100"><br/>
                                    <button type="submit" class="btn btn-primary mt-5">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
                <%- include('footer') %>