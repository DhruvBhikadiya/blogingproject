<%- include('header') %>
    <!-- END HEADER DESKTOP-->

    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <form class="d-flex m-5">
                    <input class="form-control bg-secondary border-2" style="width: 500px;" type="search" placeholder="search by title" name="search">
                    <button class="ms-3 bg-secondary border-0 text-white">Search</button>
                </form>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Title</th>
                                        <th>Link</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var i=0 %>
                                        <% sliderdata.map((v,i)=> { %>
                                            <tr>
                                                <td>
                                                    <%= ++i %>
                                                </td>
                                                <td>
                                                    <%= v.title %>
                                                </td>
                                                <td>
                                                    <%= v.link %>
                                                </td>
                                                <td>
                                                    <%= v.description %>
                                                </td>
                                                <td>
                                                    <img src="<%= v.sliderimage %>" alt="image" title="image" width="300" height="200">
                                                </td>
                                                <td>
                                                    <% if(v.status) { %>
                                                        <a href="/admin/slider/deactive/<%= v.id %>" class="btn btn-success">Active</a>
                                                    <% } else { %>
                                                        <a href="/admin/slider/active/<%= v.id %>" class="btn btn-danger">Deactive</a>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/slider/sliderdelete/<%= v.id %>">
                                                        <i class="fa fa-trash"></i>
                                                    </a>||
                                                    <a href="/admin/slider/sliderupdate/<%= v.id %>">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }) %>

                                            <tr>
                                                <td colspan="9" align="center">
                                                    <% for(var i=0; i<page;) { %>
                                                        <a href="?page=<%= i %>&search=<%= search %>" name="page" class="btn btn-success"><%= ++i %></a>
                                                    <% } %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td colspan="9" align="center">
                                                    <% if(currentpage>0) { %>
                                                        <a href="?page=<%= parseInt(currentpage)-1 %>&search=<%= search %>" name="page" class="btn btn-success">prev</a>    
                                                    <%} %>
                                                    <a href="?page=<%= currentpage %>&search=<%= search %>" name="page" class="btn btn-success"><%= parseInt(currentpage)+1 %></a>
                                                    <% var next = parseInt(currentpage)+1 
                                                    if(next<page) { %>
                                                        <a href="?page=<%= next %>&search=<%= search %>" name="page" class="btn btn-success">next</a>    
                                                    <% } %>
                                                </td>
                                            </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <%- include('footer') %>